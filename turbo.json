{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "MONGODB_URI",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["generate-env"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": [
        "app/**/*.{js,jsx,ts,tsx,md,mdx}",
        "components/**/*.{js,jsx,ts,tsx}",
        "lib/**/*.{js,jsx,ts,tsx}",
        "contexts/**/*.{js,jsx,ts,tsx}",
        "hooks/**/*.{js,jsx,ts,tsx}",
        "public/**",
        "next.config.mjs",
        "tailwind.config.js",
        "postcss.config.mjs",
        "package.json"
      ]
    },
    "dev": {
      "dependsOn": ["generate-env"],
      "cache": false,
      "persistent": true
    },
    "dev:next": {
      "dependsOn": ["generate-env"],
      "cache": false,
      "persistent": true
    },
    "generate-env": {
      "cache": false,
      "inputs": ["scripts/generate-env.js"]
    },
    "lint": {
      "inputs": [
        "app/**/*.{js,jsx,ts,tsx}",
        "components/**/*.{js,jsx,ts,tsx}",
        "lib/**/*.{js,jsx,ts,tsx}",
        "contexts/**/*.{js,jsx,ts,tsx}",
        "hooks/**/*.{js,jsx,ts,tsx}",
        ".eslintrc.*",
        "eslint.config.*",
        "package.json"
      ],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start:next": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "version:patch": {
      "cache": false
    },
    "version:minor": {
      "cache": false
    },
    "version:major": {
      "cache": false
    },
    "seed-users": {
      "cache": false
    },
    "clean-modules": {
      "cache": false
    }
  }
}
